{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": ".aws-sam/build",
    "types": ["node", "aws-lambda"]
  },
  "include": ["src/**/*.ts", "layers/**/*.ts"],
  "exclude": ["node_modules", ".aws-sam"]
}


